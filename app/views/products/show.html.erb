<div class="py-10">
  <div class="container mx-auto px-4">

    <!-- Product Image & Details -->
    <div class="flex flex-wrap lg:flex-nowrap justify-center gap-10">
      
      <!-- Image Gallery -->
      <div class="flex flex-col space-y-4">
        <% if @product.images.attached? %>
          <% @product.images.each_with_index do |image, index| %>
            <%= link_to url_for(image), target: "_blank", class: "block w-full h-full", data: { action: "click->lightbox#open" } do %>
              <%= image_tag image, class: "w-auto h-64 rounded-lg transform transition duration-500 hover:scale-105" %>
            <% end %>
          <% end %>
        <% else %>
          <p class="text-center text-gray-800 dark:text-gray-300">No image available</p>
        <% end %>
      </div>

      <!-- Product Details -->
      <div class="max-w-lg">
        <h1 class="text-4xl font-bold uppercase mb-3 dark:text-white"><%= @product.name %></h1>
        <p class="text-2xl text-gray-800 dark:text-gray-200 mb-4">$<%= number_to_currency(@product.price / 100.0) %></p>
        <p class="text-md text-gray-600 dark:text-gray-400 py-8"><%= @product.description %></p>

        <!-- Sizes -->
        <div class="my-8">
      <p class='uppercase text-lg'>Size</p>
      <% @product.stocks.each do |stock| %>
        <% if stock.amount > 0 %>
          <button data-action="click->products#selectSize" value="<%= stock.size %>" class="bg-gray-200 text-gray-800 font-semibold py-2 px-4 rounded hover:bg-gray-300 focus:outline-none focu:ring-2 focus:ring-gray-500 focus:ring-opacity-50">
            <%= stock.size %>
          </button>
        <% else %> 
          <button disabled value="<%= stock.size %>" class="disabled:bg-gray-400 bg-gray-200 text-gray-800 font-semibold py-2 px-4 rounded hover:bg-gray-300 focus:outline-none focu:ring-2 focus:ring-gray-500 focus:ring-opacity-50">
            <%= stock.size %>
          </button>
        <% end %>
      <% end %>
    </div>
    <div id="selected-size"></div>
    <button data-action="click->products#addToCart" class="inline-flex items-center justify-center px-5 py-3 border border-transparent font-medium rounded-md text-white bg-gray-600 hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500">Add To Cart</button>
  </div>
</div>
