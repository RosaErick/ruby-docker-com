<nav class="p-6 lg:px-6 ">
  <div class="container mx-auto flex justify-between items-center">
    <%= link_to root_path, class: "flex items-center" do %>
      <%= image_tag 'logo.png', class: 'block h-8 w-auto' %>
      <span class="hidden lg:block ml-3 font-semibold ">Ruby Docker Shop</span>
    <% end %>
    <div class="lg:hidden">
      <button onclick="toggleNavbar('mobile-menu')" class=" focus:outline-none">
        <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path></svg>
      </button> 
    </div>
    <div class="hidden lg:flex space-x-4 items-center">
      <%= link_to 'Home', root_path, class: " hover:bg-gray-800 hover: px-3 py-2 rounded-md text-sm font-medium" %>
      <%= link_to cart_path, class: " hover:bg-gray-800 hover: px-3 py-2 rounded-md text-sm font-medium" do %>
        <%= icon 'fa-solid', 'shopping-cart' %>
      <% end %>
      <%= render "shared/darkmode_toggle" %>
    </div>
  </div>
  <div class="hidden lg:hidden" id="mobile-menu">
    <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3">
      <%= link_to 'Home', root_path, class: " hover:bg-gray-800 hover: block px-3 py-2 rounded-md text-base font-medium" %>
      <%= link_to cart_path, class: " hover:bg-gray-800 hover: block px-3 py-2 rounded-md text-base font-medium" do %>
        <%= icon 'fa-solid', 'shopping-cart' %>
      <% end %>
    </div>
  </div>
</nav>

<script>
  function toggleNavbar(collapseID) {
    document.getElementById(collapseID).classList.toggle("hidden");
    document.getElementById(collapseID).classList.toggle("block");
  }
</script>
